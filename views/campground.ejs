<% layout('./layouts/boilerplate') -%>
<h1>All Campgrounds</h1>
<% for(let campground of campgrounds) {%>
<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <% for(let img of campground.imgs ){ %>
      <img
        src="<%= img.url %>"
        class="img-fluid rounded-start"
        alt="<%= campground.location %>"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= campground.location %></h5>
        <p class="card-text"><%= campground.description %></p>
        <a class="btn btn-primary" href="/campground/<%=campground._id%>"
          >Details</a
        >
      </div>
    </div>
  </div>
</div>
<% } %>
