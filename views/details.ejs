<% layout('./layouts/boilerplate') -%>

<div class="row">
  <div class="col-6 offset-3">
    <div class="card mb-3">
      <img src="<%= idCampground.img %>" class="card-img-top" alt="..." />

      <div class="card-body">
        <h5 class="card-title"><%= idCampground.location %></h5>

        <p class="card-text"><%= idCampground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted">
          <%= idCampground.title %>ssss
        </li>
        <li class="list-group-item">$<%= idCampground.price %>/night</li>
      </ul>
      <div class="card-body">
        <a class="card-link btn btn-primary" href="/campground">Campgrounds</a>
        <a
          class="card-link btn btn-primary"
          href="/campground/<%= idCampground._id %>/edit"
          >Edit</a
        >
      </div>
    </div>
  </div>
</div>
