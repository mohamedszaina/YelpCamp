<% layout('./layouts/boilerplate') -%>

<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= idCampground.img %>" class="card-img-top" alt="..." />

      <div class="card-body">
        <h5 class="card-title"><%= idCampground.location %></h5>

        <p class="card-text"><%= idCampground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= idCampground.title %></li>
        <li class="list-group-item">$<%= idCampground.price %>/night</li>
      </ul>
      <div class="card-body">
        <a class="card-link btn btn-primary" href="/campground">Campgrounds</a>
        <a
          class="card-link btn btn-primary"
          href="/campground/<%= idCampground._id %>/edit"
          >Edit</a
        >
      </div>
    </div>
  </div>
  <div class="col-6">
    <div class="mb-3">
      <h2>Leave a Review</h2>
      <form
        class="mb-3 needs-validation"
        novalidate
        action="/campground/<%= idCampground._id %>/reviews"
        method="post"
      >
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range"
            class="form-range"
            min="1"
            max="5"
            name="review[rating]"
            id="rating"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback"></div>
        </div>
        <div class="mb-3">
          <label for="body" class="form-label">Review</label>
          <textarea
            class="form-control"
            name="review[body]"
            id="body"
            cols="30"
            rows="3"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please Enter a review.</div>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
    </div>
    <div class="mb-3">
      <% for(let review of idCampground.reviews){ %>
      <div class="mb-3 card">
        <div class="card-body">
          <h5 class="card-title">Rating: <%= review.rating %></h5>
          <p class="card-text">Review: <%= review.body %></p>
          <form
            action="/campground/<%= idCampground._id %>/reviews/<%= review._id %>?_method=DELETE"
            method="post"
          >
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
